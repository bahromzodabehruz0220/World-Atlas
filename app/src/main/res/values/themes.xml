<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorldAtlas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.WorldAtlas" parent="Base.Theme.WorldAtlas" />

    <style name="SplashTheme" parent="Base.Theme.WorldAtlas">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TitleTheme">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="CapitalStyle">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/descriptionColor</item>
    </style>


    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
    </style>

    <style name="ExpendedStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CollapsedStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="countryTitleStyle">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="countryDescriptionTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/descriptionColor</item>
    </style>

    <style name="countryIconStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="moreItem">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="moreItemTitle">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/ubuntu</item>
    </style>


</resources>